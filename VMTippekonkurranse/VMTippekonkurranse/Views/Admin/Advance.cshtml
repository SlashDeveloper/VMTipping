
@{
    ViewBag.Title = "Oppdater avansement";
}

@using (Html.BeginForm())
{

    <div class="form-group">
        <label for="Teams" class="col-sm-2 control-label">Velg lag</label>
        <div class="col-sm-10">
            @Html.DropDownList("Teams", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label for="Rounds" class="col-sm-2 control-label">Velg runde</label>
        <div class="col-sm-10">
            @Html.DropDownList("Rounds", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label for="date" class="col-sm-2 control-label">Dato</label>
        <div class="col-sm-10">
            <input type="text" class="form-control datepicker" placeholder="Dato" value="" id="date" name="date">
        </div>
    </div>
    <div class="form-group">
        <label for="date" class="col-sm-2 control-label">Plassering (Top 4)</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" placeholder="Plassering (Top 4)" id="ranking" name="ranking" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">OK</button>
        </div>
    </div>
}
@section scripts
{
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script>
        $(function() {
            $('#date').datetimepicker({
                format: 'yyyy-mm-dd hh:ii'
            });
        });
    </script>
}
