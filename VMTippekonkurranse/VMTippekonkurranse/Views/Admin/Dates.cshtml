
@{
    ViewBag.Title = "Oppdater kampresultater";
}
@using (Html.BeginForm()){
    @Html.DropDownList("Matches")
    <input type="text" class="span2 datepicker" placeholder="Dato" value="" id="date" name="date">
    <input type="number" placeholder="Hjemme" id="home" name="home"/>
    <input type="number" placeholder="Borte" id="away" name="away" />
    <label>Er påbegynt:</label>
    <input type="checkbox" id="played" value="true" name="played" />
    <input type="submit" value="OK" />
}
@section scripts
{
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>
        $(function() {
            $('.datepicker').datepicker({
                format: 'dd-mm-yyyy'
            });
        });
    </script>
}

