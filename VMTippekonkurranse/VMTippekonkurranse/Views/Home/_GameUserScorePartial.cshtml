@model VMTipping.Model.GameUserScore
@{
    string scoreClass = "scoreZero";
    switch (Model.ScoreThisGame)
    {
        case 1:
            scoreClass = "scoreOne";
            break;
        case 2:
            scoreClass = "scoreTwo";
            break;
        case 3:
            scoreClass = "scoreThree";
            break;
        case 4:
            scoreClass = "scoreFour";
            break;
    }

}

<tr>
    <td><img src="@Model.User.ImageURL" style="width: 40px; height: 45px;" /></td>
    <td>@Html.ActionLink(Model.User.Name, "Details", "User", new { Id = Model.User.Id }, null)</td>
    <td>@Model.BetHomeGoals</td>
    <td>@Model.BetAwayGoals</td>
    <td>@Model.MatchPrediction.Result</td>
    <td>
        <div class="@scoreClass">@Model.ScoreThisGame</div>
    </td>
    <td>@Model.TotalScore</td>
</tr>